<div class="row justify-content-center align-items-center h-100 mt-5">
  <div class='col-md-6'>
  <div class='text-align-center d-flex justify-content-center'>
           <%= image_tag("chat-only.png", size: "100x100", alt: "AMA Tutor") %>
      </div>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="d-flex flex-column justify-content-center align-items-center">
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group mb-3 w-50">
  <h2 class="accent-color-st">Forgot your password?</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="form-group mb-3 w-50">
  <div class="actions">
    <%= f.submit "Send Reset Email", class:"btn btn-lg btn-accent color-white"%>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
